<%= form_for @item, :html => { :class => "form-horizontal item" } do |f| %>

  <% if @item.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :shopping_list_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :shopping_list_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:shopping_list_id) %>
  </div>
  <div class="form-group">
    <%= f.label :item_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :item_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:item_name) %>
  </div>
  <div class="form-group">
    <%= f.label :store, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :store, :class => 'form-control' %>
    </div>
    <%=f.error_span(:store) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                      shopping_lists_url, :action => 'index', :class => 'btn btn-default'%>
    </div>
  </div>

<% end %>
