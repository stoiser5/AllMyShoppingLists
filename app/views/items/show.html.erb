<%- model_class = Item -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:shopping_list_id) %>:</strong></dt>
  <dd><%= @item.shopping_list_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:item_name) %>:</strong></dt>
  <dd><%= @item.item_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:store) %>:</strong></dt>
  <dd><%= @item.store %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              shopping_lists_url, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
                     edit_item_path(@item), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    item_path(@item),
                    :method => 'delete',
                     :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                     :class => 'btn btn-danger' %>
